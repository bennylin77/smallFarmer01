body{
  font-family: Heiti TC, Microsoft JhengHei, sans-serif; 
  background-color: #f3f3f2;   
  background-image: url(<%= asset_path 'paper_texture.png'%>)  
  
}
.vbottom {
  display: inline-block;
  vertical-align: bottom;
  float: none;
}
/*======================================= top navigation =======================================*/
.menu{
  background: #f3f3f2;
  border-bottom: none;
  box-shadow: 0px 15px 0px -14px #536132;  
  color: #f1f1f1 !important;  
}
input.rounded {
    border: 1px solid #ccc;
    -moz-border-radius: 17px;
    -webkit-border-radius: 17px;
    border-radius: 17px; 
    padding: 4px 7px;
    outline: 0;
    -webkit-appearance: none;
    background: rgba( 255, 255, 255, 1); 
    border: none;     
}
input.rounded:focus {
    border: none; 
}
.navbar-right>li{
  padding-right: 10px;
}
.navbar-right>li>a.menu_right {
    padding: 7px 7px;
}
.navbar-right>li>a.menu_right:focus, .navbar-right>li>a.menu_right:active{
  background: none !important;
}
.navbar-right>li>a.menu_right img{
  height:38px;
  width: 38px;
  vertical-align: middle;
}
.navbar-right>li>a.menu_right>.menu_right_icon{
  height:35px;
  width: 35px;
  font-size: 20px;  
  text-align: center;
  vertical-align: middle;  
  line-height: 36px;
  border-radius: 100px;  
  background: rgba( 255, 255, 255, 0.75);   
}
.navbar-brand{
  color: #e29874 !important;
  font-size: 26px;
}
.mobile_menu_label{
  display: block;
  position: absolute; 
  font-size: 20px; 
  top: 16px;
  left: 47px;  
}
.menu_coupons {
  display: block;
  text-align: center;
  top: 18px;
  position: absolute;
  line-height: 20px;
  font-size: 18px;
  width: 40px;
  color: #b5841b;
}
.badge {
  display: block;
  position: absolute;
  top: 2px;
  right: 1px;
  line-height: 20px;
  height: 20px;
  padding: 0 7px;
}
.badge-danger {
  background-color: #d43f3a;
}

/*======================================= Sidebar navigation =======================================*/
/* Hide for mobile, show later */
.sidebar {
  /*display: none;*/
}
@media (min-width: 768px) {
  .sidebar {
    position: fixed;
    top: 55px;
    bottom: 0;
    left: 0;
    z-index: 1000;
    display: block;
    padding: 20px;
    overflow-x: hidden;
    overflow-y: auto; 
    background-color: #f5f5f5;
    border-right: 1px solid #eee;
  }
}
.nav-sidebar {
  margin-right: -21px; /* 20px padding + 1px border */
  margin-bottom: 20px;
  margin-left: -20px;
}
.nav-sidebar > li > a {
  padding-right: 20px;
  padding-left: 20px;
}
.nav-sidebar > .active > a,
.nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus {
  color: #fff;
  background-color: #428bca;
}
/*======================================= footer =======================================*/
.footer {
  padding-bottom: 60px;
  padding-top: 20px;
  box-shadow: 0px -15px 0px -14px #536132; 
}
.footer a{
  font-size: 14px;
  color: #536132;    
}

/*======================================= main =======================================*/
.main_frontend {
  padding-top: 80px;
  padding-bottom: 150px;  
}
.main_backend {
  padding: 90px 20px;
}
@media (min-width: 768px) {
  .main_backend {
    padding: 90px 40px;    
  }
}


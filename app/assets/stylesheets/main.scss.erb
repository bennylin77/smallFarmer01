/*======================================= Breadcrumb =======================================*/

.breadcrumb {background: rgba(255, 255, 255, 0); border: 5px solid rgba(245, 245, 245, 0); border-radius: 0px; display: block;}
.breadcrumb li {font-size: 20px;}
.breadcrumb a {color: #605856;}
.breadcrumb a:hover {color: #536132;}
.breadcrumb>.active {color: #536132;}
.breadcrumb>li+li:before {color: #605856; content: "\003E\00a0";}
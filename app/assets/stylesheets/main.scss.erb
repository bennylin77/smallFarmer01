/*======================================= footer =======================================*/
.footer {
  padding-bottom: 60px;
  padding-top: 60px;
  border-top: 1px solid #E7E7E7;
}
.footer a{
  font-size: 14px;
  color: #777;
}
.footer a:hover{
  color: #555;
  text-decoration: none;
}
.footer_service{
  color: #777;  
  font-size: 14px;
}
.footer_copyright{
  font-size: 12px;
  color: #808080;  
}
.privacy_policy{
}
.privacy_policy dt{
  font-size: 125%;
  margin-top: 25px;  
  margin-bottom: 10px;
}
/*======================================= main =======================================*/
.main_frontend {
  padding-top: 80px;
  padding-bottom: 80px;  
}
/*======================================= Breadcrumb =======================================*/
.breadcrumb {background: rgba(255, 255, 255, 0); border: 5px solid rgba(245, 245, 245, 0); border-radius: 0px; display: block;}
.breadcrumb li {font-size: 18px;}
.breadcrumb a img{ height: 50px;}
.breadcrumb a {color: #777;}
.no-touch .breadcrumb a:hover {color: #555; text-decoration: none;}
.breadcrumb>.active a {color: #555 !important; text-decoration: none;}
.breadcrumb>li+li:before {color: #555; content: "\003E\00a0";}
/*======================================= Search =======================================*/
.keyword_cover{
  width: 70%;
}
.keyword_content{
  margin-top: 15px;  
  font-size: 25px;
  letter-spacing: 4px;
}
.keyword_summary{
  margin-top: 10px;  
  font-size: 18px;
}
.keyword_statistics{
  font-size: 80%;  
  color: #737373;
}
.keyword_delicious_sum{ 
  font-size: 150%;
  color: #DE562C;
}

.keyword_description{
  margin-top: 17px;
  font-size: 15px;
}
@media (max-width: 992px) {
  .keyword_content{
    font-size: 20px;
    letter-spacing: 4px;
  }
  .keyword_summary{
    font-size: 16px;
  }  
}

@media (max-width: 768px) {
  .keyword_cover{
    width: 50%;
  }  
  .keyword_content{
    font-size: 25px;
    letter-spacing: 4px;
  }
  .keyword_summary{
    font-size: 17px;
  }  
}

/*======================================= login/register =======================================*/
.facebook{
  border: none;
  border-radius: 0;
  color: #ffffff;
  font-size: 17px;
  padding: 7px 14px 5px;
  background: #4565a3;
  text-decoration: none;
  border-bottom: 2px solid #304772;
}
.no-touch .facebook:hover, 
.facebook:focus, 
.facebook:active{
  color: #ffffff !important;
  text-decoration: none;
  background: #6A84B5;  
}
.facebook img{
  height: 20px;
  width: 20px;
  margin-right: 5px;
}
.account-wall
{
    margin-top: 20px;
    padding: 40px 0px 20px 0px;
    background-color: #f7f7f7;
    -moz-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
}
.no-background {
    font: 20px sans-serif;
    margin-top: 25px;
    margin-bottom: 25px;    
    text-align: center;  
    position: relative;
    overflow: hidden;
    span {
        display: inline-block;
        vertical-align: baseline;
        zoom: 1;
        *display: inline;
        *vertical-align: auto;
        position: relative;
        padding: 0 20px;
        &:before, &:after {
            content: '';
            display: block;
            width: 1000px;
            position: absolute;
            top: 0.73em;
            border-top: 1px solid #536132;
        }
        &:before { right: 100%; }
        &:after { left: 100%; }
    }
}

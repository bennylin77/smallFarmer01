body{
  font-family: Heiti TC, Microsoft JhengHei, sans-serif; 
  background-color: #f3f3f2;   
  background-image: url(<%= asset_path 'paper_texture.png'%>);  
  color: #605856;  
  
}
.vbottom {
  display: inline-block;
  vertical-align: bottom;
  float: none;
}
.vmiddle {
  display: inline-block;
  vertical-align: middle;
  float: none;
}
.borderless tbody tr td, .borderless tbody tr th, .borderless thead tr th {
    border: none;
}
.section_title{
  border-left: 10px solid #589145;
  padding-left: 10px;
  padding-top: 2px;
  padding-bottom: 2px;
  font-size: 30px;
  font-weight: bold;
}
.section_underline{
  padding-bottom: 10px; 
  border-bottom: 1px solid #536132;  
}
.green_btn{
  color: #ffffff;
  border: none;
  background: #64bb71;
  border-radius: 0px;
  box-shadow: 3px 3px rgb(209, 209, 200);    
}
.green_btn:hover{
  color: #ffffff;  
  background: #64bb71;  
  opacity: 0.8;
}
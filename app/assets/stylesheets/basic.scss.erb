body{
  font-family: Heiti TC, Microsoft YaHei, sans-serif; 
  background: #ffffff;
  color: #433E3C;
}
.vbottom {
  display: inline-block;
  vertical-align: bottom;
  float: none;
}
.vmiddle {
  display: inline-block;
  vertical-align: middle;
  float: none;
}
.borderless tbody tr td, .borderless tbody tr th, .borderless thead tr th {
    border: none;
}
.section_title{
  border-left: 8px solid #FF5600;
  padding-left: 10px;
  padding-top: 1.5px;
  padding-bottom: 1.5px;
  font-size: 23.5px;
  font-weight: bold;
}
.section_underline{
  padding-bottom: 10px; 
  border-bottom: 1px solid #e7e7e7;  
}
.section_sub_title{
  font-size: 22px;
  margin-left: 10px;
}
.bootstrap-tagsinput {
  width: 100% !important;
}
/*====================== btn ============================*/
.green_btn{
  color: #ffffff;
  border: none;
  background: #64bb71;
  border-radius: 0px;
  box-shadow: 3px 3px rgb(209, 209, 200);    
}
.no-touch .green_btn:hover{
  color: #ffffff;  
  background: #64bb71;  
  opacity: 0.8;
}
.orange_btn{
  color: #ffffff;
  border: none;
  background: #FF5600;
  padding: 7px 14px 5px !important; 
  border-radius: 0px;
  border-bottom: 2px solid #CC4500; 
}
.no-touch .orange_btn:hover{
  color: #ffffff;  
  background: #FF7833;
}
.light_gray_btn{
  color: #53595b;
  border: none;
  background: #edf0ed;
  padding: 7px 14px 5px !important; 
  border-radius: 0px;
  border-bottom: 2px solid #D5D8D5; 
}
.no-touch .light_gray_btn:hover{
  color: #53595b;  
  background: #F1F3F1;
}
/*====================== typeahead ============================*/
.tt-query {
  -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
     -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
          box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
}

.tt-hint {
  color: #999
}

.tt-menu {    // used to be tt-dropdown-menu in older versions
  width: 422px;
  margin-top: 4px;
  padding: 4px 0;
  background-color: #fff;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-border-radius: 4px;
     -moz-border-radius: 4px;
          border-radius: 4px;
  -webkit-box-shadow: 0 5px 10px rgba(0,0,0,.2);
     -moz-box-shadow: 0 5px 10px rgba(0,0,0,.2);
          box-shadow: 0 5px 10px rgba(0,0,0,.2);
}
.tt-header{
  padding: 3px 20px;  
  line-height: 24px; 
  background-color: #F4F4F4; 
  color: #292F33;  
}
.tt-suggestion {
  padding: 0px 20px;
  line-height: 20px;
  cursor: pointer;
}
.tt-suggestion.tt-cursor {
  color: #fff;
  background-color: #FCEEEA;
}
.tt-suggestion:hover {
  cursor: pointer;
  color: #fff;
  background-color: #FCEEEA;
}
.tt-suggestion p {
  margin: 0;
}
.tt-suggestion span.target{
  color: #292F33;
  font-weight: bold;
  display: block;
  font-size: 16px;
}
.tt-suggestion span.description{
  font-size: 14px;  
  color: #8F8F8F;
  display: block;  
}
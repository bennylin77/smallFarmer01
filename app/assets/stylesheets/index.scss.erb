//=================values
.value_explanation{
  position: relative;  
}
.value_title{
  font-weight: bold;
  position: relative;  
}
.value_op{
  margin-top: 30px;
  height: 40px;
  visibility: hidden;  
}
.value_op_eq{
  margin-top: 35px;
  height: 35px;  
  visibility: hidden;  
}
.value_circle{
  position: relative;
  height: 100px;    
}
@media (max-width:1450px){
  .value_circle{
    position: relative;
    height: 80px;    
  }
  .value_title{
    font-size: 16px;
  }  
}
@media (max-width:991px){
  .first_section, .last_section{
    padding:100px 0
  }
  .value_explanation{
    margin-bottom: 60px;
  }
  .value_circle{
    position: relative;
    height: 100px;    
  } 
  .value_title{
    font-size: 18px;
  }    
}


.main_backend {
  margin-top: 110px;  
  padding: 10px 20px;
  padding-left: 0px;
}
@media (max-width: 768px) {
  .main_backend {
    margin-top: 5px;     
    padding: 0px 20px;     
  }
}

/*======================================= Sidebar navigation =======================================*/
.sidebar {
    margin-top: 110px;  
    left: 0;
    padding: 70px 30px;
    overflow-x: hidden;
    background-color: none;
}
.no-touch .sidebar a:hover{
  text-decoration: none;
  opacity: 0.8;
}
.sidebar_user_img{
  height: 110px;
  width: 110px;
  border: solid 4px #a7a7a7;
  background-clip: content-box; /* support: IE9+ */
  background-color: transparent;  
}

.sidebar_info_title{
  font-size: 23px;
  margin-top: 18px;
  text-align: center;
  color: #565A5C;  
}
.description-sidebar{
  margin: 0;
  margin-top: 10px;  
  padding: 0;
  list-style-type: none;
  word-break: break-all;  
}
.description-sidebar > li{
  padding: 6px 0px;  
  text-align: center;   
}
.description-sidebar > li > .description-sidebar-container{
  margin: 0 auto;  
  max-width: 200px;
  text-align: left; 
  display: table-row;  
}
.sidebar_info_more{
  font-size: 12px;
  margin-top: 18px;
  text-align: left;  
}
.nav-sidebar {
  margin-top: 20px;
}
.nav-sidebar > li {
  text-align: center;  
  padding: 6px 0px;
}
.nav-sidebar > li > a{
  margin: 0 auto;  
  max-width: 110px;
  padding: 5px 10px;
  color:  #565A5C;   
  border: solid 1px #565A5C; 
}
.no-touch .nav-sidebar > li > a:hover {
  color: #ff5600;
  border: solid 1px #ff5600;
  background: none;
}
.nav-sidebar > .active > a,
.no-touch .nav-sidebar > .active > a:hover,
.nav-sidebar > .active > a:focus, 
.nav-sidebar > .active > a:active{
  color: #ff5600;
  border: solid 1px #ff5600;
}

@media (max-width: 768px) {
  .sidebar {
    margin-top: 52px;
    left: 0;
    padding: 20px 30px;
    overflow-x: hidden;
    background-color: none;
  }
  
  .nav-sidebar > li > a {
    max-width: none;
  }  
  
  .nav-sidebar {
    margin-top: 10px;
  }  
}
/*======================================= Center =======================================*/
.main_backend-tabs{
    border-bottom: 1px solid #ff5600;
}
.main_backend-tabs > li > a, 
.no-touch .main_backend-tabs > li > a:hover, 
.main_backend-tabs > li > a:focus{
    color: #565A5C;   
    background: inherit;     
    border-bottom: none;     
}
.no-touch .main_backend-tabs > li > a:hover, 
.main_backend-tabs > li > a:focus{
    color: #ff5600;  
    border: 1px solid #ffffff;  
    border-bottom: 1px solid #ff5600;        
}
.main_backend-tabs > li.active > a, 
.no-touch .main_backend-tabs > li.active > a:hover, 
.main_backend-tabs > li.active > a:focus{
    color: #ff5600;
    background: inherit; 
    border: 1px solid #ff5600;   
    border-bottom: 1px solid #ffffff; 
}

.main_backend-tab-content {
    min-height: 500px;
    padding: 40px 18px;
    border: 1px solid #ff5600;
    border-top: 0;
    border-bottom-right-radius: 4px;
    border-bottom-left-radius: 4px;
}
.main_backend-tab-content dt{
  font-size: 15px;
}
.main_backend-tab-content dd{
  margin-bottom: 5px;  
}
.main_backend-tab-content a{
  color: #433E3C; 
}
.no-touch .main_backend-tab-content a:hover{
  text-decoration: none;
  opacity: 0.8;
}
.main_backend-tab-content .btn_container{
  margin-bottom: 10px;
}
.main_backend-sub-tabs{
    border-bottom: none;
    margin: 0px;
    padding: 0px;
    list-style: none;   
}
.main_backend-sub-tabs > li{
  display: inline-block;
}
.main_backend-sub-tabs > li > a, 
.no-touch .main_backend-sub-tabs > li > a:hover, 
.main_backend-sub-tabs > li > a:focus{
    padding: 5px 24px;
    border-radius: 0px;
    color: #688919;  
    background: inherit;     
    border: 1px solid #688919;  
    text-decoration: none;          
}
.no-touch .main_backend-sub-tabs > li > a:hover, 
.main_backend-sub-tabs > li > a:focus{
    opacity: 0.8;    
}
.main_backend-sub-tabs > li.active > a, 
.no-touch .main_backend-sub-tabs > li.active > a:hover, 
.main_backend-sub-tabs > li.active > a:focus{
    color: #ffffff;
    background: #688919; 
    border: 1px solid #688919;   
}

/*======================================= component =======================================*/
.add_button{
  color: #ffffff !important;
  border: none;
  border-radius: 0;
  font-size: 16px;
  padding: 7px 14px;
  box-shadow: 3px 3px rgb(209, 209, 200);   
}
.edit_button{
  color: #433E3C !important;
  border: none;
  border-radius: 0;
  font-size: 16px;
  padding: 7px 14px;
  box-shadow: 3px 3px rgb(209, 209, 200); 
  background: #f8f5f3;    
}
.delete_button{
  background: #afb3ad !important;
  color: #ffffff !important;
  border: none !important;
  border-radius: 0 !important;
  font-size: 16px !important;
  padding: 7px 14px !important;
  box-shadow: 3px 3px rgb(209, 209, 200) !important;    
}
.no-touch .delete_button:hover,
.delete_button:focus,
.delete_button:active{
  background: #8C8F8A !important;
}
.no-touch .edit_button:hover{
  background: none !important;  
}
.backend_fruits_img{
  width: 60px;
  height: 60px;
  background-clip: content-box; /* support: IE9+ */
  background-color: transparent;  
}
.backend_pagination > .pagination > li >span,
.backend_pagination > .pagination > li >a{
  background: none;
  margin-right: 10px;
  margin-top: 7px;  
  color: #565A5C; ;
  border: 1px solid #565A5C; ; 
}
.no-touch .backend_pagination > .pagination > li >span:hover,
.no-touch .backend_pagination > .pagination > li >a:hover{
  background: none;
  color: #ff5600;
  border: 1px solid #ff5600;     
}
.backend_pagination > .pagination > li >span{
  background: none;
  color: #ff5600;
  border: 1px solid #ff5600;  
}
.backend_pagination > .pagination > li.disabled >span{
  color: #565A5C; ;  
  background: none;
  border: 1px solid #565A5C; ;   
}

						  .addTo(controller) 						  						  
	new ScrollMagic.Scene({triggerElement: ".first_section"})
						  .setTween(TweenMax.from(".green_circle", 0.4, {top: "100", ease: Linear.easeNone}))
						  .addTo(controller) 
	new ScrollMagic.Scene({triggerElement: ".first_section"})

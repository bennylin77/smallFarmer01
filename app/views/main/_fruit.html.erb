<% inventory = fruit.inventory - Order.joins(product_boxing: {}, invoice: {} ).where('product_boxings.id = ? and invoices.confirmed_c = ? and invoices.allpay_expired_at > ? ', fruit.product_boxings.first.id, false, Time.zone.now ).sum(:quantity) %>		
<%case slice%>
<%when 4%>
<div class="col-sm-6 col-lg-3 product_index_container text-center">	
<%when 3%>	
<div class="col-sm-offset-1 col-sm-3 product_index_container text-center">					
<%end%>				
<%= link_to fruit do%>
	<div class="product_index_image_container" style="background-image: url('<%=fruit.cover.url%>')">		
		<%if inventory==0%>
		<div class="product_index_sold_out_container">
			<span class="product_index_sold_out">已搶購完</span>
		</div>
		<%end%>
		<div class="product_index_delicious_container">
			<!--<span class="product_index_delicious_sum" data-count="<%= fruit.product_boxings.first.orders.where('review_at IS NOT NULL and review_score = ? ', GLOBAL_VAR['ORDER_REVIEW_DELICIOUS']).count + fruit.product_boxings.first.orders.where('review_at IS NOT NULL and review_score = ? ', GLOBAL_VAR['ORDER_REVIEW_TASTY']).count %>">0</span>人說好吃-->
			<span class="product_index_delicious_sum" data-count="<%= Order.joins(product_boxing: {}, invoice: {} ).where('product_boxings.id = ? and invoices.confirmed_c = ?', fruit.product_boxings.first.id, true ).sum(:quantity) %>">0</span> <span class="product_index_delicious_word">箱已賣出</span>						
		</div>					
	</div>
	<div class="product_index_name"><%if fruit.released_at > Time.zone.now %>[預購]<%end%><%= fruit.name%><%= "%g" % fruit.product_boxings.first.quantity %><%= Hash[unitOptions].rassoc(fruit.unit).first %></div>				
	<div class="product_index_company_name"><%= fruit.company.name%> |				
		<% pricing = fruit.product_boxings.first.product_pricings.first %>
		<%if fruit.discount!=1%>
			<s><small><%= ((pricing.price.to_i + shippingRates(cold_chain: pricing.product_boxing.product.cold_chain, size: pricing.product_boxing.size))/fruit.product_boxings.first.quantity).round(1) %></small></s> <span class="product_index_price"><%=number_with_delimiter( (priceWithShipments( pricing )/fruit.product_boxings.first.quantity).round(1), delimiter: ',')%> <span style="font-size: 80%">元/<%= Hash[unitOptions].rassoc(fruit.unit).first %>(含運)</span></span>					
		<%else%>
			<span class="product_index_price"><%=number_with_delimiter( (priceWithShipments( fruit.product_boxings.first.product_pricings.first )/fruit.product_boxings.first.quantity).round(1), delimiter: ',')%> <span style="font-size: 80%">元/<%= Hash[unitOptions].rassoc(fruit.unit).first %>(含運)</span></span>
		<%end%>				
	</div>
	<div class="product_index_fruits_icons">
		<%if fruit.GAP_c%><%=image_tag 'gap.png', class: '', style: 'height: 42px; width: 42px;'  %><%end%>		      
		<%if fruit.TAP_c%><%=image_tag 'tap.png', class: '', style: 'height: 38px; width: 38px;'  %><%end%>		      		      
		<%if fruit.OTAP_c%><%=image_tag 'otap.png', class: '', style: 'height: 38px; width: 38px;'  %><%end%>		      		      
		<%if fruit.UTAP_c%><%=image_tag 'utap.png', class: '', style: 'height: 38px; width: 38px;'  %><%end%>				    	
		<%if fruit.pesticide_qualified_c%><%=image_tag 'pesticide_qualified.png', class: '', style: 'height: 40px; width: 40px;'  %><%end%>	
		<%if fruit.pesticide_zero_c%><%=image_tag 'pesticide_zero.png', class: '', style: 'height: 40px; width: 40px;'  %><%end%>						
		<%unless fruit.sweet_degree.blank?%><%=image_tag 'sweet_degree/'+fruit.sweet_degree.to_s+'.png', class: '', style: 'height: 30px; width: 50px;' %><%end%>				    
	</div>					 			
<%end%>		 				
</div>	
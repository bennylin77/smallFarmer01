<% order = notification.order %>
<div class="col-sm-2">
	<%= image_tag order.product_boxing.product.product_images.first.image.url, class: 'img-circle farm_fruits_img', size: '100x100' %>			
</div>
<div class="col-sm-2">
	<%= image_tag order.invoice.user.avatar.url, class: 'img-circle', size: '70x70' %>			
</div>
<div class="col-sm-2">
	<%=link_to order.quantity.to_s+'箱 ('+("%g" % order.product_boxing.quantity)+Hash[unitOptions].rassoc(order.product_boxing.product.unit).first+'/箱)', '/orders/index?called_smallfarmer_c=false'%>
</div>
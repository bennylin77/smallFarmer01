<h1>Listing notifications</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Sub category</th>
      <th>Content</th>
      <th>Order</th>
      <th>User</th>
      <th>Comment</th>
      <th>Product</th>
      <th>Invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifications.each do |notification| %>
      <tr>
        <td><%= notification.category %></td>
        <td><%= notification.sub_category %></td>
        <td><%= notification.content %></td>
        <td><%= notification.order %></td>
        <td><%= notification.user %></td>
        <td><%= notification.comment %></td>
        <td><%= notification.product %></td>
        <td><%= notification.invoice %></td>
        <td><%= link_to 'Show', notification %></td>
        <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
        <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notification', new_notification_path %>

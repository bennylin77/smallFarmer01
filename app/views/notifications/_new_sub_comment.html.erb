<div class="col-sm-2 vmiddle text-center">
	<%= link_to notification.sub_comment.comment.product do%>
	<%= image_tag notification.sub_comment.comment.product.product_images.first.image.url, class: 'img-circle farm_fruits_img notification_fruit_img' %>	
	<div class="notification_fruit_name"><%= notification.sub_comment.comment.product.name%></div>	
	<%end%>		
</div>
<div class="col-sm-2 vmiddle text-center">
	<%= image_tag notification.sub_comment.user.avatar.url, class: 'img-circle', size: '70x70' %>
	<div><%= notification.sub_comment.user.email.gsub(/@.*$/, '') %></div>			
</div>
<div class="col-sm-4 vmiddle">
	<div class="talkbubble">
		<div class="talkbubble_content">
			<%= notification.sub_comment.content %>
		</div>
	</div>	
</div>
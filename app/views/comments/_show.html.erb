function postComment()
{
	if($( "#post_content" ).val()!= '')
	{
		var $btn = $('#post_button').button('loading')
		var request = $.ajax({
		url: "/comments/post",
		type: "POST",
		data: { id: <%=product.id %>, content: $( "#post_content" ).val() },
		dataType: "json"
		});
		request.done(function( message ) {
		   	$btn.button('reset')		
			$( "#post_content" ).val('')	   		
			addAlert(message.alert_class, message.message)
		});
		request.fail(function( jqXHR, textStatus ) {
			$btn.button('reset')	
		});	
	}
}
function showComment()
{
	var request = $.ajax({
	url: "/comments/show",
	type: "GET",
	data: { id: <%=product.id %>},
	dataType: "json"
	});
	request.done(function( message ) {
		$.each(  message , function( i, l ){
		  addComment(l.comment, l.sub_comments)
		});		

	});
	request.fail(function( jqXHR, textStatus ) {
		addAlert('error', '讀取失敗')
	});		
	
}

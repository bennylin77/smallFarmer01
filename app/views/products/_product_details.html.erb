			<div class="row" style="">		
				<div class="col-sm-12">
					<div class="table-responsive">					
						<table class="table	product_spec" itemprop="offers" itemscope itemtype="http://schema.org/Offer">								
							<tr>
								<th>內容量</th>
								<td>
									每箱 <%if @product.product_boxings.first.quantity%><%= "%g" % @product.product_boxings.first.quantity %><%end%><%if @product.unit%><%= Hash[unitOptions].rassoc(@product.unit).first %><%end%><%if @product.unit == GLOBAL_VAR['UNIT_CATTY'] or @product.unit == GLOBAL_VAR['UNIT_KG'] %><small> ±10%</small><%end%> 
								</td>										
								<th>甜度</th>
								<td class="text-center">
									<%unless @product.sweet_degree.blank? or @product.sweet_degree == 0 %><%=image_tag 'sweet_degree/'+@product.sweet_degree.to_s+'.png', class: 'product_sweet_degree', style: '' %><%else%>尚未提供<%end%>
								</td>								
							</tr>					
							<tr>
								<th>平均售價</th>
								<td>
									<meta itemprop="priceCurrency" content="TWD" />
									<meta itemprop="price" content="<%= priceWithShippingRates( product_boxing: @product.product_boxings.first, quantity: 1 )%>" />									
									<%=number_with_delimiter( (priceWithShippingRates( product_boxing: @product.product_boxings.first, quantity: 1 )/@product.product_boxings.first.quantity).round(1), delimiter: ',')%> <span style="font-size: 80%">元/<%= Hash[unitOptions].rassoc(@product.unit).first %>
								</td>
								<th>檢驗標章</th>
								<td class="text-center">
									<%if !@product.GAP_c and !@product.TAP_c and !@product.OTAP_c and
										 !@product.UTAP_c and !@product.pesticide_qualified_c and 
										 !@product.pesticide_zero_c and @product.organic == GLOBAL_VAR['ORGANIC_NONE']%>尚未提供<%end%>									
									<%if @product.GAP_c%><%=image_tag 'certification/gap.png', class: '', style: 'height: 55px; width: 55px;'  %><%end%>		      
									<%if @product.TAP_c%><%=image_tag 'certification/tap.png', class: '', style: 'height: 50px; width: 50px;'  %><%end%>		      		      
									<%if @product.OTAP_c%><%=image_tag 'certification/otap.png', class: '', style: 'height: 50px; width: 50px;'  %><%end%>		      		      
									<%if @product.UTAP_c%><%=image_tag 'certification/utap.png', class: '', style: 'height: 50px; width: 50px;'  %><%end%>	
									<%if @product.pesticide_qualified_c%><%=image_tag 'certification/pesticide_qualified.png', class: '', style: 'height: 50px; width: 50px;'  %><%end%>	
									<%if @product.pesticide_zero_c%><%=image_tag 'certification/pesticide_zero.png', class: '', style: 'height: 50px; width: 50px;'  %><%end%>							
									<%if @product.organic != 0%>
									<%= image_tag Hash[organicImageOptions].rassoc(@product.organic).first, style: 'height: 50px; width: 50px;'  %> 					 
									<%end%>
								</td>															
							</tr>
							<tr itemprop="seller" itemscope itemtype="http://schema.org/Organization">
								<th>農場名稱</th>
								<td itemprop="name">
									<%=@product.company.name %>
								</td>
								<th>聯絡方式</th>
								<td class="text-center">
									<%=@product.company.phone_no.gsub(/^\+886/, '0') %><br>									
									<%=@product.company.county %><%=@product.company.district%><%=@product.company.address%>								
								</td>								
							</tr>																
							<tr>
								<th>保存方式<br>賞味提醒</th>
								<td colspan="3"><%= @product.preservation %></td>
							</tr>		
						</table>				
					</div>
				</div>								
			</div>	
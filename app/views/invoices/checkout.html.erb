	</div>		
	<div class="form-group">
		<label class="col-sm-2 control-label">Email</label>
		<div class="form-inline col-sm-6">
			<%= u.text_field :email, class: "form-control", placeholder: 'Email' %>						
		</div>
	</div>		  

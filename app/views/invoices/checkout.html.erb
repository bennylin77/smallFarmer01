		<div class="form-inline col-sm-8">
			<%= text_field_tag :receiver_last_name, @receiver_last_name, {class: "form-control", placeholder: '姓'} %>
			<%= text_field_tag :receiver_first_name, @receiver_first_name,{class: "form-control", placeholder: '名'} %>			
		</div>

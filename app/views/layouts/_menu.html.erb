<script>
function showCart(){
	var request = $.ajax({
		url: "/carts/showCart",
		type: "GET",
		data: {},
		dataType: "json"
	});
	request.done(function( message ) {
		$(".cart_lists").empty();
			$.each(  message , function( i, l ){		
				$(".cart_lists").append('<li>'+l.name+' 數量:'+l.quantity+' 價錢'+l.price+'</li>')
	 	});
	});
	request.fail(function( jqXHR, textStatus ) {
	});		
}
</script>
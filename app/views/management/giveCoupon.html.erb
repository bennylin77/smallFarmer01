<div class="container">
	<%= form_tag('/management/giveCoupon', method: :post, class: 'form-horizontal', role: "form") do%>
		<div class="form-group">
			<div class="col-sm-10">
			<%= text_field_tag 'user_id', '', class: 'form-control', placeholder: '使用者ID'%>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-10">
			<%= number_field_tag 'amount', '', class: 'form-control', placeholder: '回饋金數量'%>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-10">
			<%= number_field_tag 'coupon_confirmation', '', class: 'form-control', placeholder: '回饋金數量確認'%>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-10">
			<%= password_field_tag 'code', '', class: 'form-control', placeholder: '回饋金發放密碼'%>		
			</div>
		</div>
		<div class="form-group">	
			<div class="col-sm-10">	
			<%= submit_tag "送出", data: { confirm: "Are you sure?" }, class: 'btn btn-success' %>
			</div>
		</div>
	<%end%>
</div>
<div class="container-fluid main_frontend">
	<div class="row">
		<div class="col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">	
			<div class="text-center" style="font-size: 26px;">重寄認證連結</div>
			<p class="text-center"></p>			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "form-horizontal", role: "form" }) do |f| %>		
  		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>
			<div class="form-group">
				<div class="col-sm-12">
 				<%= f.email_field :email, autofocus: true, placeholder: '電子信箱', class: "form-control" %>					
		    	</div>
		  	</div>	  	
			<div class="form-group" style="margin-top: 30px;">
				<div class="col-sm-12">
		    	<%= f.submit "重寄", class: "btn btn-success add_button btn-block" %>
		  		</div>
		  	</div> 
		<% end %>		
		</div>
	</div>			
</div>
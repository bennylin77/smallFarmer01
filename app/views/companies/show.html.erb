			  <ol class="farm_carousel-indicators carousel-indicators">
				<%@company.company_images.each_with_index do |c, i|%> 
					<%if i==0%>
			    	<li data-target="#carousel-example-generic" data-slide-to="<%=i%>" class="active"></li>

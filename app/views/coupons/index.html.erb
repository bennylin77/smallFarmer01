<h2 class="text-center">目前可用回饋金: <%= coupons%>元</h2>
<div class="table-responsive">
<table class="table table-bordered table-hover">
  <tr>
    <th>回饋金編號</th>  	
    <th>建立日期</th>
    <th>使用期限</th>    
    <th>來源</th>    
	<th>原始金額</th>
	<th>剩餘金額</th>  
	<th>項目明細</th>						 		           
  </tr>
  <% current_user.coupons.order('id desc').each do |c| %>
  <tr>
    <td><%= c.id %></td>  	
    <td><%= c.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td><%= couponExpired(c)%></td>
    <td><%= couponSource(c)%></td>
    <td><%= c.original_amount.to_i%>元</td>    
    <td><%= c.original_amount.to_i - c.amount.to_i%>元</td> 	
    <td>
		<table class="table table-striped">     
		<tr>
		    <td>購買編號</td>					    								           
	  	</tr>
	  	<%if c.invoice_coupon_lists.size != 0%> 		      	
	    	<% c.invoice_coupon_lists.each.each do |i_c_l|%>      	
	        <tr>	
			    <td><%= i_c_l.invoice.id %></td>	         	
	        </tr>
	    	<%end%>	 
	    <%else%>
	        <tr>	
			    <td>--</td>	        	        	       	
	        </tr>	    
	    <%end%>	       
      </table>      	
    </td> 
  </tr>
  <%end%>  
</table>
</div>